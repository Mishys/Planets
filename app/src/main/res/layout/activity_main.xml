<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.planets.ui.user_firebase.MainActivity">

    <Button
        android:id="@+id/logOut"
        android:layout_width="466dp"
        android:layout_height="843dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="4dp"
        android:background="@color/material_on_background_disabled"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        android:text="коснитесь экрана"
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="194dp"
        android:layout_height="194dp"
        android:src="@drawable/earth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/logOut"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/logOut"
        app:layout_constraintTop_toTopOf="@+id/logOut"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="260dp"
        android:layout_height="205dp"
        android:layout_marginTop="452dp"
        android:src="@drawable/venus"
        app:layout_constraintEnd_toEndOf="@+id/logOut"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logOut" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="243dp"
        android:layout_height="221dp"
        android:src="@drawable/sun"
        app:layout_constraintBottom_toBottomOf="@+id/logOut"
        app:layout_constraintEnd_toEndOf="@+id/logOut"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logOut"
        app:layout_constraintVertical_bias="0.229" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="202dp"
        android:layout_height="188dp"
        android:src="@drawable/neptune"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/logOut"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logOut"
        app:layout_constraintVertical_bias="0.972" />

</androidx.constraintlayout.widget.ConstraintLayout>